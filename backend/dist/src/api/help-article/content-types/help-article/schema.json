{
    "kind": "collectionType",
    "collectionName": "help_articles",
    "info": {
        "singularName": "help-article",
        "pluralName": "help-articles",
        "displayName": "Help Article"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string"
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "content": {
            "type": "blocks"
        },
        "excerpt": {
            "type": "text"
        },
        "featured": {
            "type": "boolean"
        },
        "views": {
            "type": "integer"
        },
        "helpful_yes": {
            "type": "integer"
        },
        "helpful_no": {
            "type": "integer"
        },
        "order": {
            "type": "integer"
        },
        "category": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::category.category"
        },
        "subcategory": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::subcategory.subcategory"
        }
    }
}
